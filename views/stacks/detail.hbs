<div class="html-detail">
  <div class="header-detail">

    <img src="{{stack.image}}" class="image-detail" alt="Stack Image">
    <div class="shadow">

      <div class="info-detail">
        <h1>{{stack.title}}</h1>
        <h4>Time:{{stack.timeInHours}}h | Category: {{stack.category}} | <i class="fas fa-user"></i>{{stack.createdBy}}
        </h4>
      </div>
    </div>
  </div>
